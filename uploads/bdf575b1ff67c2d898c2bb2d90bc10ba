import java.io.*;
import java.util.*;
/** Write the following methods to sort 
     bubbleSort 
     quickSort
     mergeSort
**/

public class ArraySort {
	private static int count = 1;
	private static int TOTAL = 100;	

	// to Generate a Random Integer between x and y
	// rand.nextInt(y)+x;

	private static Random rand = new Random();

public static int[] createArray(int size) {
	int []array = new int[size];
	for (int i =0;i<size;i++)
		array[i] = rand.nextInt(10000);
	return array;
}

	public static void didItPass(boolean truth) {

		if (truth) 
	   		System.out.println("Pass Test " + count);
		else
			System.out.println("Fail Test " + count);
		count++;
	}


public static boolean isSorted(int []array) {

	for (int i =0;i<array.length-1;i++) {
		if (array[i] > array[i+1])
		    return false;
	}
	return true;
}

/***
  ** bubbleSort(int []array)
  ** sorts the array of ints using quicksort
  **/
   public static void bubbleSort(int []array) {

   }

/***
  ** quickSort(int []array)
  ** sorts the array of ints using quicksort
  **/
   public static void quickSort(int []array) {

   }

/***
  ** mergeSort(int []array)
  ** sorts the array of ints using quicksort
  **/
   public static void mergeSort(int []array) {

   }
	
	public static void main(String []args) {

		int []array = createArray(TOTAL);
		bubbleSort(array);
		didItPass(isSorted(array));

		array = createArray(TOTAL);
		quickSort(array);
		didItPass(isSorted(array));
		
		array = createArray(TOTAL);
		mergeSort(array);
		didItPass(isSorted(array));
		
	}	
}		